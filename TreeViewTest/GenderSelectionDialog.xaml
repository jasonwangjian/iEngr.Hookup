<Window x:Class="WpfTreeViewEditor.GenderSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="选择性别" Height="200" Width="300" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="请选择性别:" Grid.Row="0" Margin="0,0,0,20" 
                   FontSize="14" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <RadioButton x:Name="rbUnknown" Content="未知" Margin="0,5" 
                       GroupName="GenderGroup" IsChecked="True"/>
            <RadioButton x:Name="rbMale" Content="男性" Margin="0,5" 
                       GroupName="GenderGroup"/>
            <RadioButton x:Name="rbFemale" Content="女性" Margin="0,5" 
                       GroupName="GenderGroup"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Click="OkButton_Click" IsDefault="True"
                    Background="LightGreen" FontWeight="Bold"/>
            <Button Content="取消" Click="CancelButton_Click" IsCancel="True"
                    Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Window>