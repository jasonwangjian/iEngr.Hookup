<Window x:Class="CheckComboBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="CheckComboBox 示例" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 数据模板 -->
        <DataTemplate x:Key="ItemTemplate">
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Id, StringFormat='({0})'}" Foreground="Gray" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 基本用法 -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="基本多选:"/>
        <xctk:CheckComboBox Grid.Row="0" Grid.Column="1"
                           ItemsSource="{Binding AllItems}"
                           DisplayMemberPath="Name"
                           SelectedItemsOverride="{Binding SelectedItems, Mode=TwoWay}"
                           Delimiter=", "
                           Text="请选择项目..."
                           Width="300"
                           Height="30"/>

        <!-- 带全选功能 -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="带全选功能:"/>
        <xctk:CheckComboBox Grid.Row="1" Grid.Column="1"
                           ItemsSource="{Binding AllItems}"
                           DisplayMemberPath="Name"
                           SelectedItemsOverride="{Binding SelectedItems, Mode=TwoWay}"
                           IsSelectAllActive="True"
                           SelectAllContent="全选/取消全选"
                           Delimiter=" | "
                           Width="300"
                           Height="30"/>

        <!-- 自定义模板 -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="自定义模板:"/>
        <xctk:CheckComboBox Grid.Row="2" Grid.Column="1"
                           ItemsSource="{Binding AllItems}"
                           ItemTemplate="{StaticResource ItemTemplate}"
                           SelectedItemsOverride="{Binding SelectedItems, Mode=TwoWay}"
                           Delimiter="; "
                           Text="选择项目(显示ID)..."
                           Width="300"
                           Height="30"/>

        <!-- 操作按钮 -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                   Orientation="Horizontal" Margin="0,10">
            <Button Content="显示选中项" Click="ShowSelected_Click"/>
            <Button Content="选中前3项" Click="SelectFirstThree_Click"/>
            <Button Content="清空选择" Click="ClearSelection_Click"/>
            <Button Content="添加新项目" Click="AddNewItem_Click"/>
            <Button Content="获取选中ID" Click="GetSelectedIds_Click"/>
        </StackPanel>

        <!-- 选中结果显示 -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="选中项目:"/>
        <TextBlock Grid.Row="4" Grid.Column="1" 
                  Text="{Binding SelectedItemsText}" 
                  FontWeight="Bold" Foreground="Blue"
                  TextWrapping="Wrap"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="选中ID:"/>
        <TextBlock Grid.Row="5" Grid.Column="1" 
                  Text="{Binding SelectedIdsText}"
                  FontWeight="Bold" Foreground="Green"
                  TextWrapping="Wrap"/>
    </Grid>
</Window>