<UserControl x:Class="iEngr.Hookup.HK_Mat_Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="20" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <ComboBox x:Name="cbMainCat" Margin="2" IsEditable="False" MinWidth="240" SelectionChanged="cbMainCat_SelectionChanged" DisplayMemberPath="Name"/>
                <ComboBox x:Name="cbSubCat"  Margin="2" IsEditable="False" MinWidth="240" SelectionChanged="cbSubCat_SelectionChanged" DisplayMemberPath="Name"/>
            </WrapPanel>
            <Label Grid.Row="1" Grid.Column="0" >主材质：</Label>
            <ComboBox x:Name="cbMatMat" Margin="2" Grid.Row="1" Grid.Column="1"  SelectionChanged="cbMatMat_SelectionChanged" DisplayMemberPath="Name"/>
            <Label x:Name="lbMainSpec" Grid.Row="2" Grid.Column="0" >主参数：</Label>
            <WrapPanel Grid.Row="2" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbMainSpecT1" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbMainSpec1" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbMainSpecT2" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbMainSpec2" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbMainSpecT3" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbMainSpec3" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
            </WrapPanel>
            <WrapPanel  Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Label  x:Name="lbPort1" Grid.Row="3" Grid.Column="0">端口一：</Label>
            </WrapPanel>
            <WrapPanel Grid.Row="3" Grid.Column="1" x:Name="wpPort1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <ComboBox x:Name="cbTypeP1" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbType_SelectionChanged" DisplayMemberPath="Name"></ComboBox>
                <ComboBox x:Name="cbSizeP1" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbSizeP1_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
            </WrapPanel>
            <WrapPanel  Grid.Row="4" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
                <Label  x:Name="lbPort2" Grid.Row="4" Grid.Column="0">端口二：</Label>
            </WrapPanel>
            <WrapPanel Grid.Row="4" Grid.Column="1" x:Name="wpPort2" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <ComboBox x:Name="cbTypeP2" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbType_SelectionChanged" DisplayMemberPath="Name"></ComboBox>
                <ComboBox x:Name="cbSizeP2" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbSizeP2_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
            </WrapPanel>
            <Label x:Name="lbAuxSpec" Grid.Row="5" Grid.Column="0" >副参数：</Label>
            <WrapPanel Grid.Row="5" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbAuxSpecT1" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbAuxSpec1" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbAuxSpecT2" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbAuxSpec2" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                    <ComboBox x:Name="cbAuxSpecT3" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent"></ComboBox>
                    <ComboBox x:Name="cbAuxSpec3" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
                </StackPanel>
            </WrapPanel>
            <Label x:Name="lbMoreSpecCn" Grid.Row="6" Grid.Column="0" >描述(中):</Label>
            <TextBox x:Name="tbMoreSpecCn" Margin="2" Grid.Row="6" Grid.Column="1" KeyDown="tbMoreSpecCn_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
            <Label x:Name="lbMoreSpecEN" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right">(EN):</Label>
            <TextBox x:Name="tbMoreSpecEn" Margin="2" Grid.Row="7" Grid.Column="1" KeyDown="tbMoreSpecCn_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>

            <!--<Label Grid.Row="1" Grid.Column="0">材料小类：</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" >
                <ComboBox x:Name="cbSubCat" MinWidth="200"  Margin="2" IsEditable="True" SelectionChanged="cbSubCat_SelectionChanged"></ComboBox>
            </StackPanel>
            <Label Grid.Row="2" Grid.Column="0">端口一：</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" >
                <ComboBox x:Name="cbTypeP1" MinWidth="100"  Margin="2" IsEditable="True" SelectionChanged="cbTypeP1_SelectionChanged"></ComboBox>
            </StackPanel>-->

        </Grid>
        <DataGrid x:Name="dgResult" Margin="20" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                   CanUserAddRows="False" AutoGenerateColumns="False" SelectionUnit="FullRow" IsReadOnly="True"  HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" />
                <DataGridTextColumn Header="材料名称" Binding="{Binding Path=Name}" />
                <DataGridTextColumn Header="规格" Binding="{Binding Path=SpecCombMain}" />
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" >
            <Button x:Name="btnToBeChk" IsEnabled="True" Margin="5,2,2,2" Content="测试" FontSize="11" Click="btnToBeChk_Click"/>
        </StackPanel>

    </Grid>
</UserControl>
