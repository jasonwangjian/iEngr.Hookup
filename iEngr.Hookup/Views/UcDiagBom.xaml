<UserControl x:Class="iEngr.Hookup.Views.UcDiagBom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             xmlns:vm="clr-namespace:iEngr.Hookup.ViewModels"
             xmlns:ex="clr-namespace:iEngr.Hookup.Models"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.DataContext>
        <vm:BomItemsViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- 创建转换器 -->
        <local:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cv:EmptyToBoolConverter  x:Key="EmptyToBoolConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Visibility="{Binding IsLangCtrlShown, Converter={StaticResource BoolToVisibilityConverter}}"
                   Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,5,5,0" >
            <CheckBox Margin="0,0,10,0" IsChecked="{Binding LangInEnglish}">English</CheckBox>
            <CheckBox Margin="0,0,10,0"  IsChecked="{Binding LangInChinese}">中文</CheckBox>
        </WrapPanel>

        <DataGrid x:Name="dgBOM" Margin="0" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" IsReadOnly="False" 
                  CanUserAddRows="False" AutoGenerateColumns="False" SelectionUnit="FullRow" HorizontalAlignment="Stretch"
                  PreviewKeyDown="dgBOM_PreviewKeyDown"
                  BeginningEdit="DataGrid_BeginningEdit"
                  FrozenColumnCount="3"
                  ItemsSource="{Binding DataSource}" 
		          SelectedItem="{Binding SelectedItem}"
                  HorizontalGridLinesBrush="DarkGray"
                  VerticalGridLinesBrush="DarkGray"
                  ex:ScrollSyncBehavior.SyncGroup="BomGroup"
                  ex:DataGridColumnSyncBehavior.SyncGroupName="dgDiagBom"
                  ex:DataGridColumnSyncBehavior.SyncDirection="Bidirectional"
                  ex:DataGridComparisonHelper.IsComparisonById="{Binding IsComparisonById}"
                  ex:DataGridComparisonHelper.IsComparisonEnabled="{Binding IsComparisonEnabled}"
                  ex:DataGridComparisonHelper.HighlightBrush="LightCoral"
                 >
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <!--<Setter Property="Background" Value="Transparent"/>-->
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="LightSteelBlue"/>
                    </Style.Resources>
                    <!--<Setter Property="IsEnabled" Value="{Binding IsOwned}" />-->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightSkyBlue"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding IsSameID}" Value="True">
                            <Setter Property="Background" Value="Yellow"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Comos导航" Command="{Binding ComosItemContextMenuCommand}"
                              ToolTip="Comos原生的右键菜单（导航、属性）"
                              Visibility="{Binding SelectedItem.IsComosItem, Converter={StaticResource BoolToVisibilityConverter}}"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                    <MenuItem Header="清除排序" Click="ClearAllSorting_click"/>
                    <Separator/>
                    
                </ContextMenu>
            </DataGrid.ContextMenu>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="CellEditEnding">
                    <i:InvokeCommandAction 
                                Command="{Binding DataContext.CellEditEndingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                PassEventArgsToCommand="True"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction 
                        Command="{Binding DataContext.SelectionChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}"  IsReadOnly="True"/>
                <DataGridTextColumn Header="No." Binding="{Binding Path=No}" IsReadOnly="False"/>
                <DataGridTextColumn Header="名称" Binding="{Binding Path=NameCn}" IsReadOnly="True"
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=NameEn}" IsReadOnly="True"
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="技术规格" Binding="{Binding Path=SpecAllCn}"   IsReadOnly="True"
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="Technical Specification" Binding="{Binding Path=SpecAllEn}"   IsReadOnly="True"
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
                <DataGridComboBoxColumn x:Name="dcMatCode" Header="Mat.Code" DisplayMemberPath="Name" SelectedValuePath="ID"
                                        SelectedValueBinding="{Binding Path=MatMatCode}" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="dcQty" Header="数量" Binding="{Binding Path=Qty}"/>
                <DataGridComboBoxColumn x:Name="dcUnit" Header="单位" DisplayMemberPath="Name" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=Unit}" />
                <DataGridComboBoxColumn x:Name="dcSR" Header="供货" DisplayMemberPath="NameCn" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=SupplyResponsible}" >
                    <!-- 列头靠右 -->
                    <DataGridComboBoxColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGridComboBoxColumn.HeaderStyle>
                </DataGridComboBoxColumn>
                <DataGridComboBoxColumn x:Name="dcSD" Header="专业" DisplayMemberPath="NameCn" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=SupplyDiscipline}" />
                <DataGridComboBoxColumn x:Name="dcER" Header="安装" DisplayMemberPath="NameCn" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=ErectionResponsible}"  >
                    <!-- 列头靠右 -->
                    <DataGridComboBoxColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Right"/>
                        </Style>
                    </DataGridComboBoxColumn.HeaderStyle>
                    </DataGridComboBoxColumn>
                <DataGridComboBoxColumn x:Name="dcED" Header="专业 " DisplayMemberPath="NameCn" SelectedValuePath="Code"
                                        SelectedValueBinding="{Binding Path=ErectionDiscipline}" />
                <DataGridTextColumn Header="备注" Binding="{Binding Path=RemarksCn}"  
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="Remarks" Binding="{Binding Path=RemarksEn}"  
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Visibility="{Binding IsButtonShown, Converter={StaticResource BoolToVisibilityConverter}}" 
                    Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="3,0,0,0">
            <Button Content="⇞" Command="{Binding MoveToFirstCommand}" Margin="2,5" Width="24"/>
            <Button Content="⬆️" Command="{Binding MoveUpCommand}"  Margin="2,5" Width="24"/>
            <Button Content="⬇️" Command="{Binding MoveDownCommand}"  Margin="2,5" Width="24"/>
            <Button Content="⇟" Command="{Binding MoveToLastCommand}"  Margin="2,5" Width="24"/>
            <Button Content="🔢" Command="{Binding NoResetCommand}"  Margin="2,10" Width="24"
                    ToolTip="根据当前顺序重新设置序号"/>
        </WrapPanel>
        <WrapPanel  Visibility="{Binding IsButtonShown, Converter={StaticResource BoolToVisibilityConverter}}"
                    Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,5">
            <Button Content="新增" Command="{Binding NewAddCommand}"  Margin="5" Width="80"/>
            <Button Content="更新" Command="{Binding UpdateCommand}"  Margin="5" Width="80"/>
            <Button Content="变更" Command="{Binding AlterCommand}"  Margin="5" Width="80"/>
            <Button Content="删除" Command="{Binding DeleteCommand}"  Margin="5" Width="80"/>
        </WrapPanel>
    </Grid>
</UserControl>

