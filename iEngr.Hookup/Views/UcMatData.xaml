<UserControl x:Class="iEngr.Hookup.Views.UcMatData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:vm="clr-namespace:iEngr.Hookup.ViewModels"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:MatDataViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- 创建转换器 -->
        <cv:AS1ToBoolConverter x:Key="AS1ToBoolConverter" />
        <cv:NullVisibilityConverter x:Key="NullVisibilityConverter" />
        <cv:PortVisibilityConverter x:Key="PortVisibilityConverter" />
        <cv:SpecTVisibilityConverter x:Key="SpecTVisibilityConverter"/>
    </UserControl.Resources>


    <Grid Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="2" Grid.Column="0" >分类：</Label>
        <WrapPanel Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" >
            <ComboBox Margin="2" IsEditable="False" MinWidth="120" ItemsSource="{Binding MainCats}" SelectedItem="{Binding MainCat}"
                      DisplayMemberPath="Name"/>
            <ComboBox Margin="2" IsEditable="False" MinWidth="120" ItemsSource="{Binding SubCats}" SelectedItem="{Binding SubCat}"
                      DisplayMemberPath="Name"/>
        </WrapPanel>
        <Label Grid.Row="3" Grid.Column="0" >主材质：</Label>
        <ComboBox Margin="2" Grid.Row="3" Grid.Column="1" DisplayMemberPath="Name"/>
        <Label Grid.Row="4" Grid.Column="0" >主参数：</Label>
        <WrapPanel Grid.Row="4" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <ComboBox x:Name="cbMainSpecT1" Margin="2" IsEditable="False" DisplayMemberPath="Name" BorderThickness="0">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox Margin="2" IsEditable="true" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT1}"></ComboBox>
            <ComboBox Margin="2" IsEditable="False" DisplayMemberPath="Name" BorderThickness="0">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox Margin="2" IsEditable="true" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT2}"></ComboBox>
            <ComboBox Margin="2" IsEditable="False" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox Margin="2" IsEditable="true"  KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT3}"></ComboBox>
        </WrapPanel>
        <WrapPanel  Grid.Row="5" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Label Grid.Row="3" Grid.Column="0">端口一：</Label>
        </WrapPanel>
        <WrapPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox MinWidth="120"  Margin="2" IsEditable="False" DisplayMemberPath="Name" 
                      ItemsSource="{Binding TypeAllP1}" SelectedItem="{Binding TypeP1}" 
                      Visibility ="{Binding TypeAllP1.Count, Converter={StaticResource NullVisibilityConverter}}"
                     ></ComboBox>
            <ComboBox x:Name ="cmbSizeP1"  MinWidth="120"  Margin="2" IsEditable="False" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                      ItemsSource="{Binding SizeAllP1}" SelectedItem="{Binding SizeP1}" 
                      Visibility ="{Binding TypeAllP1.Count, Converter={StaticResource NullVisibilityConverter}}"
                      ></ComboBox>
        </WrapPanel>
        <WrapPanel  Grid.Row="6" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Label  Grid.Row="4" Grid.Column="0">端口二：</Label>
        </WrapPanel>
        <WrapPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <ComboBox MinWidth="120" Margin="2" IsEditable="False" DisplayMemberPath="Name"
                      IsEnabled="{Binding AlterCode, Converter={StaticResource AS1ToBoolConverter}}"
                      Visibility ="{Binding TypeAllP2.Count, Converter={StaticResource NullVisibilityConverter}}"
                      ItemsSource="{Binding TypeAllP2}" SelectedItem="{Binding TypeP2}"
            ></ComboBox>

            <ComboBox x:Name ="cmbSizeP2" MinWidth="120"  Margin="2" IsEditable="False" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                      IsEnabled="{Binding AlterCode, Converter={StaticResource AS1ToBoolConverter}}"
                      ItemsSource="{Binding SizeAllP2}" SelectedItem="{Binding SizeP2}" 
                      Visibility ="{Binding TypeAllP2.Count, Converter={StaticResource NullVisibilityConverter}}"
                      ></ComboBox>
        </WrapPanel>
        <Label Grid.Row="7" Grid.Column="0" >副参数：</Label>
        <Label Grid.Row="8" Grid.Column="0" >描述(中):</Label>
        <TextBox Margin="2" Grid.Row="8" Grid.Column="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right">(EN):</Label>
        <TextBox Margin="2" Grid.Row="9" Grid.Column="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="10" Grid.Column="0" >描述(中):</Label>
        <TextBox Margin="2" Grid.Row="10" Grid.Column="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="11" Grid.Column="0" HorizontalAlignment="Right">(EN):</Label>
        <TextBox Margin="2" Grid.Row="11" Grid.Column="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
    </Grid>
</UserControl>
