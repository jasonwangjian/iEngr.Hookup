<UserControl x:Class="iEngr.Hookup.Views.UcMatData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:vm="clr-namespace:iEngr.Hookup.ViewModels"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:MatDataViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- 创建转换器 -->
        <cv:AS1ToBoolConverter x:Key="AS1ToBoolConverter" />
        <cv:PortVisibilityConverter x:Key="PortVisibilityConverter" />
        <cv:SpecTVisibilityConverter x:Key="SpecTVisibilityConverter"/>
    </UserControl.Resources>


    <Grid Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="2" Grid.Column="0" >分类：</Label>
        <WrapPanel Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" >
            <ComboBox x:Name="cbMainCat" Margin="2" IsEditable="False" MinWidth="120" ItemsSource="{Binding MainCats}" SelectedItem="{Binding MainCat}"
                      SelectionChanged="cbMainCat_SelectionChanged" DisplayMemberPath="Name"/>
            <ComboBox x:Name="cbSubCat"  Margin="2" IsEditable="False" MinWidth="120" ItemsSource="{Binding SubCats}" SelectedItem="{Binding SubCat}"
                      SelectionChanged="cbSubCat_SelectionChanged" DisplayMemberPath="Name"/>
        </WrapPanel>
        <Label Grid.Row="3" Grid.Column="0" >主材质：</Label>
        <ComboBox x:Name="cbMatMat" Margin="2" Grid.Row="3" Grid.Column="1"  SelectionChanged="cbMatMat_SelectionChanged" DisplayMemberPath="Name"/>
        <Label x:Name="lbMainSpec" Grid.Row="4" Grid.Column="0" >主参数：</Label>
        <WrapPanel Grid.Row="4" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <ComboBox x:Name="cbMainSpecT1" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbMainSpec1" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT1}"></ComboBox>
            <ComboBox x:Name="cbMainSpecT2" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbMainSpec2" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT2}"></ComboBox>
            <ComboBox x:Name="cbMainSpecT3" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbMainSpec3" Margin="2" IsEditable="true" SelectionChanged="cbMainSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbMainSpecT3}"></ComboBox>
        </WrapPanel>
        <WrapPanel  Grid.Row="5" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Label  x:Name="lbPort1" Grid.Row="3" Grid.Column="0">端口一：</Label>
        </WrapPanel>
        <WrapPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <WrapPanel.Visibility>
                <MultiBinding Converter="{StaticResource PortVisibilityConverter}">
                    <Binding ElementName="cbTypeP1" Path="Items.Count"/>
                </MultiBinding>
            </WrapPanel.Visibility>
            <ComboBox x:Name="cbTypeP1" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbType_SelectionChanged" DisplayMemberPath="Name" 
                       ItemsSource="{Binding TypeAllP1}" SelectedItem="{Binding TypeP1}"></ComboBox>
            <ComboBox x:Name="cbSizeP1" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbSizeP1_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
        </WrapPanel>
        <WrapPanel  Grid.Row="6" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <Label  x:Name="lbPort2" Grid.Row="4" Grid.Column="0">端口二：</Label>
        </WrapPanel>
        <WrapPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <WrapPanel.Visibility>
                <MultiBinding Converter="{StaticResource PortVisibilityConverter}">
                    <Binding ElementName="cbTypeP2" Path="Items.Count"/>
                </MultiBinding>
            </WrapPanel.Visibility>
            <ComboBox x:Name="cbTypeP2" MinWidth="120" Margin="2" IsEditable="False" SelectionChanged="cbType_SelectionChanged" DisplayMemberPath="Name"
            ItemsSource="{Binding TypeAllP2}" SelectedItem="{Binding TypeP2}"
            IsEnabled="{Binding AlterCode, Converter={StaticResource AS1ToBoolConverter}}"></ComboBox>
            <ComboBox x:Name="cbSizeP2" MinWidth="120"  Margin="2" IsEditable="False" SelectionChanged="cbSizeP2_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"></ComboBox>
        </WrapPanel>
        <Label x:Name="lbAuxSpec" Grid.Row="7" Grid.Column="0" >副参数：</Label>
        <WrapPanel Grid.Row="7" Grid.Column="1"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <ComboBox x:Name="cbAuxSpecT1" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbAuxSpec1" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbAuxSpecT1}"></ComboBox>
            <ComboBox x:Name="cbAuxSpecT2" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbAuxSpec2" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbAuxSpecT2}"></ComboBox>
            <ComboBox x:Name="cbAuxSpecT3" Margin="2" IsEditable="False" SelectionChanged="cbSpecT_SelectionChanged" DisplayMemberPath="Name" BorderThickness="0" Background="Transparent">
                <ComboBox.Visibility>
                    <MultiBinding Converter="{StaticResource SpecTVisibilityConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="Items.Count"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="SelectedItem"/>
                    </MultiBinding>
                </ComboBox.Visibility>
            </ComboBox>
            <ComboBox x:Name="cbAuxSpec3" Margin="2" IsEditable="true" SelectionChanged="cbAuxSpec_SelectionChanged" KeyDown="cbSpec_KeyDown" DisplayMemberPath="Name"
                              Visibility="{Binding Visibility, ElementName=cbAuxSpecT3}"></ComboBox>
        </WrapPanel>
        <Label Grid.Row="8" Grid.Column="0" >描述(中):</Label>
        <TextBox x:Name="tbMoreSpecCn" Margin="2" Grid.Row="8" Grid.Column="1" KeyDown="tbMoreSpec_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right">(EN):</Label>
        <TextBox x:Name="tbMoreSpecEn" Margin="2" Grid.Row="9" Grid.Column="1" KeyDown="tbMoreSpec_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="10" Grid.Column="0" >描述(中):</Label>
        <TextBox x:Name="tbRemarksCn" Margin="2" Grid.Row="10" Grid.Column="1" KeyDown="tbMoreSpec_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
        <Label Grid.Row="11" Grid.Column="0" HorizontalAlignment="Right">(EN):</Label>
        <TextBox x:Name="tbRemarksEn" Margin="2" Grid.Row="11" Grid.Column="1" KeyDown="tbMoreSpec_KeyDown" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxHeight="50"></TextBox>
    </Grid>
</UserControl>
