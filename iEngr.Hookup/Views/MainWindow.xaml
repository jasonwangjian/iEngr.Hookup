<UserControl x:Class="iEngr.Hookup.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup"
             xmlns:vm="clr-namespace:iEngr.Hookup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TestMainViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- 创建转换器 -->
        <local:NullToBoolConverter x:Key="NullToBoolConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 按钮区 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Add" Command="{Binding AddPersonCommand}" Margin="5" Width="80"/>
            <Button Content="Delete" Command="{Binding DeletePersonCommand}" Margin="5" Width="80"/>
        </StackPanel>

        <!-- 数据列表 -->
        <ListView ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="120"/>
                    <GridViewColumn Header="Age" DisplayMemberBinding="{Binding Age}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- 编辑区 -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Selected Person:" FontWeight="Bold"/>
            <TextBox Text="{Binding SelectedPerson.Name, Mode=TwoWay}" Margin="0,5" IsEnabled="{Binding SelectedPerson, Converter={StaticResource NullToBoolConverter}}"/>
            <TextBox Text="{Binding SelectedPerson.Age, Mode=TwoWay}" Margin="0,5" IsEnabled="{Binding SelectedPerson, Converter={StaticResource NullToBoolConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
