<UserControl x:Class="iEngr.Hookup.Views.UcMatMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:vw="clr-namespace:iEngr.Hookup.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="52*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <vw:UcMatData x:Name="ucMD" Grid.Row="1" Grid.Column="0"/>
        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch"/>
        <vw:UcMatList x:Name="ucML" Grid.Row="1" Grid.Column="2" />
        <WrapPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Button x:Name="btnQuery" Content="Query" Click="btnQuery_Click" Margin="5" Width="80"/>
            <Button Content="Test" Margin="5" Width="80"/>
        </WrapPanel>
        <!--<Button x:Name="text" Click="text_Click" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">测试</Button>-->
    </Grid>
</UserControl>
