<UserControl x:Class="iEngr.Hookup.Views.UcAppliedComos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             xmlns:vm="clr-namespace:iEngr.Hookup.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AppliedComosViewModel/>
    </UserControl.DataContext>
    <Control.Resources>
        <cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
    </Control.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding AppliedItems}" Margin="0" SelectionMode="Single" Grid.Row="1" Grid.Column="1"
                  SelectedItem="{Binding SelectedItem}"
                  MouseDoubleClick="ListView_MouseDoubleClick"
                  HorizontalAlignment ="Stretch"
                  Loaded="ListView_Loaded"
                  SizeChanged="ListView_SizeChanged"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightSkyBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<Border Padding="2" Margin="2" Background="White" 
                        BorderBrush="red" BorderThickness="1" CornerRadius="4">-->
                    <Border Padding="0,2,0,0" >
                        <!-- 鼠标进悬停处理 --><!--
                        <i:Interaction.Triggers>
                            --><!-- 鼠标进入时启动延迟计时 --><!--
                            <i:EventTrigger EventName="MouseEnter">
                                <i:InvokeCommandAction 
                                Command="{Binding DataContext.ItemMouseEnterCommand, 
                                        RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"/>
                            </i:EventTrigger>

                            --><!-- 鼠标离开时取消计时 --><!--
                            <i:EventTrigger EventName="MouseLeave">
                                <i:InvokeCommandAction 
                                Command="{Binding DataContext.ItemMouseLeaveCommand, 
                                        RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"/>
                            </i:EventTrigger>
                            --><!-- 鼠标左键点击时取消计时 --><!--
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction 
                                Command="{Binding DataContext.ItemMouseClickCommand, 
                                        RelativeSource={RelativeSource AncestorType=ListView}}"
                                CommandParameter="{Binding}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>-->
                        <StackPanel Orientation="Horizontal">
                            <!--<Ellipse Width="40" Height="40" Fill="LightBlue"/>-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="{Binding AssignMode}" Background="Black" Foreground="White" Width="16" TextAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DisplayName}" Margin="2,0,0,0"/>
                                <TextBlock Text="🔒" Margin="2,0,0,0" Foreground="Red" Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseEnter">
                    <i:InvokeCommandAction 
                                Command="{Binding DataContext.MouseEnterCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                                CommandParameter="{Binding}"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseLeave">
                    <i:InvokeCommandAction 
                        Command="{Binding DataContext.MouseLeaveCommand, RelativeSource={RelativeSource AncestorType=ListView}}" 
                        CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Comos导航" Command="{Binding ComosItemContextMenuCommand}"
                              ToolTip="Comos原生的右键菜单（导航、属性）"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                    <MenuItem Header="删除" Command="{Binding RemoveCommand}"
                              ToolTip="将此仪表设备从当前安装图模版中移除，删除对应的安装图对象"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                    <MenuItem Header="锁定" Command="{Binding LockCommand}"
                              ToolTip="锁定后，对于改仪表设备的自动分配将失效"
                              Visibility="Collapsed"
                              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <!--<ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="删除" Command="{Binding RemoveCommand}"
                                          ToolTip="将此仪表设备从当前安装图模版中移除，删除对应的安装图对象"
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.SelectedItem}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>-->
            <!--<ListView.View>
                <GridView>
                    <GridViewColumn Header="适用位号">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding AssignMode}"/>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>-->
        </ListView>
    </Grid>
</UserControl>
