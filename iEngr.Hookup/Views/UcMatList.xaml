<UserControl x:Class="iEngr.Hookup.Views.UcMatList"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:vm="clr-namespace:iEngr.Hookup.ViewModels"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:MatListViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- 创建转换器 -->
        <local:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,10,0" >
            <CheckBox Margin="0,0,10,0" IsChecked="{Binding LangInEnglish}">English</CheckBox>
            <CheckBox Margin="0,0,10,0"  IsChecked="{Binding LangInChinese}">中文</CheckBox>
            <CheckBox Margin="0,0,10,0" IsChecked="{Binding IsSpecSegment}">规格片段</CheckBox>
            <CheckBox IsChecked="{Binding AutoQueryEnable}">自动刷行查询材料库</CheckBox>
        </WrapPanel>
        <DataGrid x:Name="dgResult" Margin="5" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto"
                  CanUserAddRows="False" AutoGenerateColumns="False" SelectionUnit="FullRow" IsReadOnly="True"  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding DataSource}" 
		          SelectedItem="{Binding SelectedItem}"
                 >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                        Command="{Binding DataContext.MouseDoubleClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        PassEventArgsToCommand="True"/>
                </i:EventTrigger>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction 
                        Command="{Binding DataContext.SelectionChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" />
                <DataGridTextColumn x:Name="dcNameCn" Header="材料名称" Binding="{Binding Path=NameCn}"  
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcNameEn" Header="Name" Binding="{Binding Path=NameEn}"  
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecMainCn" Header="主参数" Binding="{Binding Path=SpecMainCn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentCn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecMainEn" Header="Main Spec." Binding="{Binding Path=SpecMainEn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentEn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecPortCn" Header="端口" Binding="{Binding Path=SpecPortCn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentCn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecPortEn" Header="Port Spec." Binding="{Binding Path=SpecPortEn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentEn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecAuxCn" Header="副参数" Binding="{Binding Path=SpecAuxCn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentCn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecAuxEn" Header="Aux.Spec." Binding="{Binding Path=SpecAuxEn}"  
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentEn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecMoreCn" Header="更多参数" Binding="{Binding Path=SpecMoreCn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentCn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecMoreEn" Header="More Data" Binding="{Binding Path=SpecMoreEn}"   
                                    local:Extensions.IsVisible="{Binding Data.IsSpecSegmentEn, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecAllCn" Header="组合规格描述" Binding="{Binding Path=SpecAllCn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcSpecAllEn" Header="Combined Spec." Binding="{Binding Path=SpecAllEn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="Mat.Code." Binding="{Binding Path=MatMatCode}" />
                <DataGridTextColumn x:Name="dcMatMatCn" Header="材质." Binding="{Binding Path=MatMatCn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcMatMatEn" Header="Mat.Mat." Binding="{Binding Path=MatMatEn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn Header="PN/CL" Binding="{Binding Path=SpecPClass}" />
                <DataGridTextColumn x:Name="dcRemCn" Header="备注" Binding="{Binding Path=RemarksCn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInChinese, Source={StaticResource Proxy}}"/>
                <DataGridTextColumn x:Name="dcRemEn" Header="Remarks" Binding="{Binding Path=RemarksEn}"   
                                    local:Extensions.IsVisible="{Binding Data.LangInEnglish, Source={StaticResource Proxy}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,0,0,5">
            <Button Content="查询" Command="{Binding QueryCommand}"  Margin="5" Width="80"/>
            <Button Content="新增" Command="{Binding NewAddCommand}"  Margin="5" Width="80"/>
            <Button Content="更新" Command="{Binding UpdateCommand}"  Margin="5" Width="80"/>
            <Button Content="删除" Command="{Binding DeleteCommand}"  Margin="5" Width="80"/>
        </WrapPanel>
    </Grid>
</UserControl>
