<UserControl x:Class="iEngr.Hookup.Views.UcDxfPicPdf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iEngr.Hookup.Views"
             xmlns:cv="clr-namespace:iEngr.Hookup.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="zoomCanvas_SizeChanged">
    <UserControl.Resources>
        <cv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <cv:FalseToVisibilityConverter x:Key="FalseToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0">
            <TextBlock Text="{Binding PicturePath}" Margin="2"/>
        </StackPanel>
        <Border  Grid.Row="1" Visibility="{Binding IsDxfFile, Converter={StaticResource BoolToVisibilityConverter}}"
                     ClipToBounds="True" Background="Black" MinWidth="20" MinHeight="20">
            <!-- 添加右键菜单 -->
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="测试" Click="Test_Click"/>
                    <MenuItem Header="打开文件" Click="FileOpen_Click"/>
                    <MenuItem Header="适应窗口" Click="FitToView_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
            <Canvas x:Name="dxfCanvas" Background="Transparent"
                Width="auto" Height="auto"
            ClipToBounds="True">
                <!--<Image x:Name="frameImage" Source="{Binding ImageSource}" Stretch="None"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   AllowDrop="{Binding AllowDrop}"
                   Drop="frameImage_Drop"
                   >

                </Image>-->
            </Canvas>
        </Border>
        <Canvas x:Name="zoomCanvas" Grid.Row="1"  Visibility="{Binding IsDxfFile, Converter={StaticResource FalseToVisibilityConverter}}"
            MouseWheel="Canvas_MouseWheel"
            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
            MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
            MouseMove="Canvas_MouseMove"
            ClipToBounds="True">



            <Image x:Name="contentImage" Source="{Binding ImageSource}" Stretch="None"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   AllowDrop="{Binding AllowDrop}"
                   Drop="content_Drop"
                   >

                <!-- 添加右键菜单 -->
                <Image.ContextMenu>
                    <ContextMenu x:Name="imageContextMenu">
                        <MenuItem Header="上一页" Command="{Binding PreviousPageCommand}" 
                         Visibility="{Binding IsPdfFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <MenuItem Header="下一页" Command="{Binding NextPageCommand}" 
                         Visibility="{Binding IsPdfFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Separator Visibility="{Binding IsPdfFile, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <MenuItem Header="重置" Click="Reset_Click"/>
                        <MenuItem Header="适应窗口" Click="FitToWindow_Click"/>
                        <MenuItem Header="打开文件" Click="FileOpen_Click"/>
                    </ContextMenu>
                </Image.ContextMenu>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="imageScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="imageTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Canvas>
    </Grid>
</UserControl>
