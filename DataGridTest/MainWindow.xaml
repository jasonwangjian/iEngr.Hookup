<Window x:Class="DataGridTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridTest"
        mc:Ignorable="d"
        Title="学生管理系统" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <!--<Window.Resources>
        <local:BindingProxy x:Key="Proxy" Data="{Binding}" />
    </Window.Resources>-->

    <Grid>
        <DataGrid x:Name="studentsDataGrid" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Students}"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="姓名" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="年龄" Binding="{Binding Age}" Width="60"/>

                <!-- 使用 ElementName 绑定 -->
                <DataGridComboBoxColumn 
                    x:Name="colx"
                    Header="学科"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Id"
                    SelectedValueBinding="{Binding DisciplineId}"
                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>